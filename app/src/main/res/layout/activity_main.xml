<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startButton"
        android:layout_width="205dp"
        android:layout_height="73dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="103dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/archivo_semibold_italic"
        android:gravity="center"
        android:onClick="switchToGenerator"
        android:text="@string/generate"
        android:textColor="@color/white"
        android:textSize="29sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/creditsButton"
        android:layout_width="205dp"
        android:layout_height="73dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="103dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/archivo_semibold_italic"
        android:gravity="center"
        android:onClick="switchToCreator"
        android:text="@string/to_creator"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startButton"
        tools:ignore="TextSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/exitButton"
        android:layout_width="205dp"
        android:layout_height="73dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="103dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/archivo_semibold_italic"
        android:gravity="center"
        android:onClick="exitWithoutConfirmation"
        android:text="@string/exit"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/creditsButton" />
</androidx.constraintlayout.widget.ConstraintLayout>